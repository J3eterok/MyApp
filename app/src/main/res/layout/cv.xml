<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:onClick="ShowEvent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/event"
            android:padding="25dp">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/eventTime"
                android:layout_alignBottom="@+id/eventTime"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="something"
                android:textColor="@color/cardview_light_background"
                android:textColorLink="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-5dp"
                android:text="time"
                android:textColor="@color/cardview_light_background"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/eventAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/eventCategory"
                android:layout_alignStart="@+id/eventName"
                android:layout_marginBottom="5dp"
                android:text="adress"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/eventCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/eventAdress"
                android:layout_marginBottom="0dp"
                android:text="category"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/eventId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/eventTime"
                android:layout_alignParentBottom="true"
                android:text="TextView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
