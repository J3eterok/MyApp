<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/angle"
    tools:context=".EventView_Subscriber">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/Category_header"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bar" />

        <TextView
            android:id="@+id/comment_header"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Date"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:text="Комментарий"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:text="Название"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginLeft="9dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_header"
            android:layout_weight="1"
            android:background="@drawable/mainmembers"
            android:enabled="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Category_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Name"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:text="Категория"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Category"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginLeft="9dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Category_header"
            android:layout_weight="1"
            android:background="@drawable/mainmembers"
            android:enabled="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Date_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Category"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:text="Дата"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginLeft="9dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Date_header"
            android:layout_weight="1"
            android:background="@drawable/mainmembers"
            android:enabled="false"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Comment"
            android:background="@drawable/mainmembers"
            android:textColor="@color/cardview_light_background"
            android:textSize="20dp"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="9dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/comment_header"
            android:ems="10"
            android:enabled="false"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:text="TextView" />

        <Button
            android:id="@+id/Members"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_above="@+id/SignUp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:onClick="ViewMembers"
            android:text="Открыть список участников" />

        <Button
            android:id="@+id/SignUp"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/bar"
            android:onClick="SignUp"
            android:text="Подписаться"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>